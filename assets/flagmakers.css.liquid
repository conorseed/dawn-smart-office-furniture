:root{
  --font-body-weight: 300;
  --font-heading-weight: 800;
}
body, [class*="color-scheme-"]{
    color: rgba(var(--color-foreground), 1);
}
/* NAVIGATION */
@media screen and (min-width: 990px){
  .header {
      grid-template-columns: 1fr auto 1fr;
  }
}
ul .header__menu-item.list-menu__item.link {
    font-weight: 700;
}
ul.mega-menu__list.page-width:not(.mega-menu__list--condensed)>li {
    border-top: 1px solid #000;
    padding-top: 1rem;
}
ul [id*="-specials"]{
    position: relative;
}
ul [id*="-specials"]:after {
    content: "Sale";
    font-size: 10px;
    text-transform: uppercase;
    background-color: #0f4771;
    color: #fff;
    line-height: 1;
    padding: 3px 6px;
    border-radius: 8px;
    position: absolute;
    top: -6px;
    right: 10px;
}

ul a#HeaderDrawer-specials:after{
    position: relative;
    top: unset;
    right: unset;
    margin-left: 12px;
}
/* MEGA MENU */
#Details-HeaderMenu-2 {
    position: relative;
}
#MegaMenu-Content-2{
    right: unset;
    z-index: 1;
    width: 200px;
    padding: 2rem;
}
#MegaMenu-Content-2 ul{
    padding: 0;
}