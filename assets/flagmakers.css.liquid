:root{
  --font-body-weight: 400;
  --font-heading-weight: 800;
}
body, [class*="color-scheme-"]{
    color: rgba(var(--color-foreground), 1);
}
.rte a{
  word-break: break-all;
}
/* NAVIGATION */
@media screen and (min-width: 990px){
  .header {
      grid-template-columns: 1fr auto 1fr;
  }
}
ul .mega-menu__link {
    color: rgb(var(--color-foreground));
}
ul .header__menu-item.list-menu__item.link {
    font-weight: 700;
}
ul.mega-menu__list.page-width:not(.mega-menu__list--condensed)>li {
    border-top: 1px solid #000;
    padding-top: 1rem;
}
ul [id*="-specials"]{
    position: relative;
}
ul [id*="-specials"]:after {
    content: "Sale";
    font-size: 10px;
    text-transform: uppercase;
    background-color: #0f4771;
    color: #fff;
    line-height: 1;
    padding: 3px 6px;
    border-radius: 8px;
    position: absolute;
    top: -6px;
    right: 10px;
}

ul a#HeaderDrawer-specials:after{
    position: relative;
    top: unset;
    right: unset;
    margin-left: 12px;
}
.cart-count-bubble {
    left: unset;
    right: 0;
    top: 0;
    font-weight: bold;
}
/* SLIDERS */
@media(min-width: 750px){
    .slideshow__controls.slideshow__controls--top{
        position: unset;
        margin-top: -44px;
        border: none;
    }
    .slideshow__control-wrapper {
        background-color: #eaf6ff;
        border-radius: 100em;
    }
    .slideshow__controls .slider-button{
        position: absolute; 
        top: 50%;
        translate: 0 50%;
        width: auto;
        height: auto;
        opacity: 0;
        transition: all ease 0.35s;
        
    }
    slideshow-component:hover .slider-button{
        opacity: 1;
    }
    slideshow-component:hover .slider-button.slider-button--prev{
        left: 0;
    }
    slideshow-component:hover .slider-button.slider-button--next{
        right: 0;
    }
    .slider-button.slider-button--prev{
        left: -10rem;
    }
    .slider-button.slider-button--next{
        right: -10rem;
    }
    .slideshow__controls .slider-button .icon{
        width: 70px;
        height: auto;
    }
    
    button.slideshow__autoplay.slider-button {
        display:none
    }
}
.slideshow.banner:after, .slideshow .banner__media:after{
    pointer-events: none;
}
/* COLLECTIONS */
@media(max-width: 749px){
    .collection-hero.collection-hero--with-image .collection-hero__image-container.media{
        display:none
    }
}
/* MEDIA LINKS */
a.media:hover img{
    transform: scale(1.03);
}
a.media img{
    transition: transform var(--duration-long) ease;
}

/* PRICE SNIPPET */
.price-wrapper {
    display: flex;
    flex-wrap: wrap;
    flex-direction: column;
    gap: 2px;
}
.product .price:not(.price--on-sale) .price__container .price__regular{
    display: flex;
    gap: 2rem;
    flex-wrap: wrap;
}
.product .price .product__tax{
  margin-top: 0;
}

/* TITLE UPDATES */
.card__heading.h5 small,
.product__title small{
    display:block;
    font-weight: 400;
    margin-top: 5px;
}
.product__title h1 {
    --font-heading-scale: 1.2;
}
.product__title h1 small{
    font-size: 0.7em;
}
/* MEGA MENU */
.mega-menu:not(#Details-HeaderMenu-1){
    position: relative;
    z-index: 1;
}
.mega-menu__content:not(#MegaMenu-Content-1) {
    width: 250px;
    left: 0;
    padding: 2rem;
}
.mega-menu__content:not(#MegaMenu-Content-1) ul{
    padding: 0;
}
.mega-menu__content:not(#MegaMenu-Content-1) > ul > li:first-child a{
  font-weight: 700;
}

/* Infinite Options by ShopPad */
#infiniteoptions-container {
  width: 100%;
  display: block;
  box-sizing: border-box;
}

#infiniteoptions-container > div {
  padding-bottom: 10px;
}

#infiniteoptions-container div > label,
#infiniteoptions-container .spb-label-tooltip {
  margin-bottom: 3px;
  font-size: 13px !important;
}

#infiniteoptions-container input[type="text"], 
#infiniteoptions-container input[type="number"], 
#infiniteoptions-container select,
#infiniteoptions-container textarea {
  display: block;
  width: 100%;
  font-family: var(--font-body-family);
  font-style: var(--font-body-style);
  font-weight: var(--font-body-weight);
  font-size: 1.4rem !important;
  color: rgb(var(--color-foreground));
  background-color: transparent;
  line-height: 1.6;
  border-radius: var(--inputs-radius);
  border: 1px solid #888888;
}

#infiniteoptions-container input[type="text"], 
#infiniteoptions-container input[type="number"], 
#infiniteoptions-container select {
  height: 4.5rem;
  padding: 0 4rem 0 1.5rem;
}

#infiniteoptions-container textarea {
  height: 9rem;
  padding: 10px;
}

#infiniteoptions-container select {
  display: inline-block;
  width: 100%;
  background-color: transparent;
  background-image: url('data:image/svg+xml;base64,');
  background-repeat: no-repeat;
  background-position: right;
  background-size: 24px 24px;
  margin: 0;
  padding-right: 20px;
  -webkit-appearance: none;
  -moz-appearance: none;
  -ms-appearance: none;
  -o-appearance: none;
  appearance: none;
}

#infiniteoptions-container select::-ms-expand {
  display: none;
}

#infiniteoptions-container .spb-productdescfont {
  font-size: 1.2rem;
  margin-top: 0;
}

#infiniteoptions-container input[type="checkbox"],
#infiniteoptions-container input[type="radio"] {
  margin: 3px 5px 0px 0px;
  min-height: initial !important;
}

#infiniteoptions-container span label {
  display: block;
}

#infiniteoptions-container fieldset {
  padding: 0 !important;
  border: 0;
  margin: 0 !important;
}

#infiniteoptions-container .spb-productoptionswatchwrapper {
  padding-bottom: 5px !important;
}

#infiniteoptions-container input[type="text"]:focus, 
#infiniteoptions-container input[type="number"]:focus, 
#infiniteoptions-container select:focus, 
#infiniteoptions-container textarea:focus{
  box-shadow: none !important;
  outline: unset !important;
}

