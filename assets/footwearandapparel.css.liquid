/*
 * GLOBAL TYPOGRAPHY
 */
@font-face {
    font-family: 'ombudsman';
    src: url('{{ 'ombudsmanstencil-webfont.woff2' | asset_url }}') format('woff2'),
         url('{{ 'ombudsmanstencil-webfont.woff' | asset_url }}') format('woff');
    font-weight: normal;
    font-style: normal;
}
@font-face {
    font-family: 'lexend';
    src: url('{{ 'lexend-bold-webfont.woff2' | asset_url }}') format('woff2'),
         url('{{ 'lexend-bold-webfont.woff' | asset_url }}') format('woff');
    font-weight: bold;
    font-style: normal;

}
@font-face {
    font-family: 'lexend';
    src: url('{{ 'lexend-regular-webfont.woff2' | asset_url }}') format('woff2'),
         url('{{ 'lexend-regular-webfont.woff' | asset_url }}') format('woff');
    font-weight: normal;
    font-style: normal;

}

h1, h2, h3, .h0, .h1, .h2, .h3 {
    --font-heading-family: ombudsman, monospace
}
:root{
    --font-body-family: lexend, sans-serif;
    --fa-orange: 242 103 34;
}

/*
 * GLOBAL PARTS
 */
.multicolumn-list p {
    margin: 0 0 1em !important;
}
.slideshow__controls{
    border: none !important; 
}
.slideshow__autoplay.slider-button{
    border-left: none;
}

/*
 * COLLECTION LIST CARDS
 */
.collection-list.contains-card .card__content{
    position:absolute;
    top:0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgb( var(--fa-orange) / 50% );
}
.collection-list.contains-card .collection-list__item--no-media .card__content{
    background-color: rgb( var(--fa-orange) );
}
.collection-list.contains-card .card__content h3{
    color: #fff;
    font-family: var(--font-body-family);
    font-weight: 700;
}
.collection-list.contains-card .card--card > .card__content .card__information{
    display: flex; 
    align-items: center;
    justify-content: center;
    text-aligncenter;
}

/*
 * Home
 */
section#shopify-section-template--14388672135243__multicolumn h3,
div#shopify-section-template--14388672135243__117a4c3d-e815-419b-ad91-b9f1bd44030d h2{
    font-size: calc(var(--font-heading-scale) * 4rem);
    color: rgb(var(--fa-orange));
}

div#shopify-section-template--14388672135243__117a4c3d-e815-419b-ad91-b9f1bd44030d img {
    object-fit: contain;
}